<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认订单"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#FFFFFF"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_receiving_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="暂未设置收货地址"
            android:textSize="14sp"
            />

        <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_consignor"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请新建收货地址"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/tv_name"
                android:paddingLeft="10dp"
                android:layout_below="@id/tv_consignor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_number"
                android:layout_below="@id/tv_consignor"
                android:layout_toRightOf="@id/tv_name"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageButton
                android:id="@+id/ibtn_new_address"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/jumpto"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_distribution"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同城配送"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shop"/>

            <TextView
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="博爵会积分商城"
                android:textSize="18sp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tea"/>

            <LinearLayout
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="传奇会大红袍茶叶 一级武夷岩茶浓香型
                        送礼500g 正宗武夷山原产 乌龙茶四方罐装散装礼盒"
                    android:textColor="#000"/>

                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="【红标】500g传奇会大红袍"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_119"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="115dp"
                    android:text="119"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="2dp"
                    android:layout_toRightOf="@id/tv_119"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="#000"/>

                <TextView
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"/>

            </RelativeLayout>

            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_1"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共1件"/>

                <TextView
                    android:id="@+id/tv_2"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品小计："
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_toRightOf="@id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="119"
                    android:textColor="#D36565"
                    android:textSize="20sp"/>

                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="8dp"
                    android:layout_toRightOf="@id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="#000"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_margin="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white">

        <TextView
            android:id="@+id/tv_4"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_5"
            android:layout_marginLeft="220dp"
            android:layout_toRightOf="@id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无可用"
            android:textSize="18sp"/>

        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jumpto"
            android:background="#fff"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:background="@drawable/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家留言"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(50字以内)"
            android:textSize="18sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_6"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计1件，合计："
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_7"
            android:layout_toRightOf="@id/tv_6"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="119"
            android:textSize="20sp"
            android:textColor="#D36565"
            />

        <TextView
            android:layout_toRightOf="@id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:text="积分"
            android:textSize="16sp"
            />

        <Button
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交订单"
            android:textSize="20sp"
            android:textColor="#fff"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button"/>

    </RelativeLayout>

</LinearLayout>